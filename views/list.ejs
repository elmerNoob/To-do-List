<%- include('header') %>
<div class="box" id="heading">
    <h1><%= kindOfDay%></h1>
</div>

<div class="box">

    <% for(i=0; i<task.length;i++){ %>
    <div class="item">
        <input type="checkbox">
        <p>
            <%= task[i] %>
        </p>
    </div>
    <% } %>


    <form action="/" method="post" class="item">

        <input type="text" name="newTask" placeholder="New Task" autocomplete="off">
        <button type="submit" name="list" value="<%=kindOfDay%>">+</button>

    </form>

</div>
<%- include('footer') %>